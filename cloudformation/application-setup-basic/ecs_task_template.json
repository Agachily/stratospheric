{
  "family": "aws101-todo-app",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::221875718260:role/aws101-application-network-ECSTaskExecutionRole-1DR8RAZ6ZKYQJ",
  "containerDefinitions": [
    {
      "cpu": 256,
      "memory": 512,
      "name": "aws101-todo-app",
      "image": "TO_BE_REPLACED",
      "portMappings": [
        {
          "containerPort": 8080
        }
      ],
      "environment": {
        "TODO_COGNITO_CLIENT_ID": { "Ref" : "UserPoolClientId" },
        "TODO_COGNITO_USER_POOL_ID": { "Ref" : "UserPoolId" }
      },
      "secret": {
        "TODO_COGNITO_CLIENT_SECRET": { "Ref" : "UserPoolClientSecret" }
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "aws101-todo-app",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "aws101-todo-app"
        }
      }
    }
  ]
}